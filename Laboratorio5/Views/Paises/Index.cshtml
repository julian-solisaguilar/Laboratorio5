@model List<Laboratorio5.Models.PaisModel>;

@{
  ViewData["Title"] = "Lista de Paises";
}

<h1>@ViewBag.MainTitle</h1>

<div>
  <a href="@Url.Action("CrearPais","Paises")" class = "btn btn-success" id = "Crear Pais"> Crear Pais </a>
  <table class = "table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Idioma</th>
        <th>Continente</th>
        <th>Editar</th>
        <th>Borrar</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var pais in Model)
      {
        <tr>
          <td>@pais.Id</td>
          <td>@pais.Nombre</td>
          <td>@pais.Idioma</td>
          <td>@pais.Continente</td>
          <td>@Html.ActionLink("Editar", "EditarPais", new { identificador = pais.Id},
          new {@class = "btn btn alert-info", @onclick = "return confirm('Quiere editar este pais?');"})</td>
          <td>@Html.ActionLink("Borrar", "BorrarPais", new { identificador = pais.Id},
          new {@class = "btn btn alert-danger", @onclick = "return confirm('Quiere borrar este pais?');"})</td>
        </tr>
      }
    </tbody>
  </table>
</div>

